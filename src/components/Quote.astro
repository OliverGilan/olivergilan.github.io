---
interface Props {
  author?: string;
  source?: string;
  link?: string;
}

const { author, source, link } = Astro.props;
---

<blockquote class="quote-block not-prose my-6 bg-accent/5 border-l-4 border-accent/40 rounded-r-lg p-4">
  <div class="quote-content text-lg italic leading-relaxed">
    <slot />
  </div>
  {(author || source) && (
    <footer class="mt-3 flex flex-wrap items-baseline gap-x-2 text-sm text-ink-light">
      {author && <cite class="not-italic font-medium">{author}</cite>}
      {link && source ? (
        <a href={link} class="text-accent hover:underline" target="_blank" rel="noopener noreferrer">
          {source}
        </a>
      ) : source ? (
        <span class="italic">{source}</span>
      ) : link ? (
        <a href={link} class="text-accent hover:underline" target="_blank" rel="noopener noreferrer">
          Link
        </a>
      ) : null}
    </footer>
  )}
</blockquote>
