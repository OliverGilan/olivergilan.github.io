---
interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="not-prose my-8 flex flex-col items-center">
  <img
    src={src}
    alt={alt}
    class="max-w-full rounded-lg shadow-sm"
    loading="lazy"
  />
  {caption && (
    <figcaption class="mt-3 text-center text-sm text-ink-light italic">
      {caption}
    </figcaption>
  )}
</figure>
